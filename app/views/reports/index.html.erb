<div class="row">
  <div class="small-12 columns">
    <h2>Reportes</h2>
  </div>
  <div class="small-12 columns">
    <%= link_to new_report_path do %> <%= fa_icon 'plus' %>  Crear Reporte<%end%>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <table class='datatable'>
      <thead>
        <th>Semana</th>
        <th>Niño</th>
        <th>Brigadista</th>
        <th>Calificación</th>
        <th>Asistencia</th>
        <th>Observaciones</th>
        <th>Número de actividades</th>
        <th>Opciones</th>
      </thead>
      <tbody>
        <% @reports.each do |report| %>
          <tr>
            <td><%= report.week %></td>
            <td><%= report.kid.name %></td>
            <td><%= report.trooper.present? ? report.trooper.name : "N/A" %></td>
            <td><%= report.grade %></td>
            <td><%= report.assistance ? "Si" : "No" %></td>
            <td><%= report.general_observations %></td>
            <td><%= report.activities.count %></td>
            <td>
              <div class="opciones_tabla">
              <%= link_to "#{ fa_icon 'eye'} Ver".html_safe, report_path(report), :class=>"button small" %>
              <%= link_to "#{ fa_icon 'pencil'} Editar".html_safe, edit_report_path(report), :class=>"button small" %>
              <% if can? :destroy, Report %>              
                <%= link_to "#{ fa_icon 'trash-o'} Eliminar".html_safe, report_path(report), :method=>"delete", :confirm=>"¿Estas seguro que quieres eliminar este reporte?", :class=>"button small alert"%>
              <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="row">
  <div class="small-2 text-center columns">
    <%= link_to reports_path(:format=>:csv) do %> <%= fa_icon 'file-text' %> Exportar a CSV <%end%>
  </div>
</div>

