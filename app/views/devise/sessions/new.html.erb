<div class="row">
  <div class="login-logo small-4 small-centered columns">
  <img src="<%= asset_path('logo.png') %>">
  </div>
</div>
<div class="row">
  <div class="login-form func small-6 small-centered columns">
    <h3>México Urbano</h3>
    <hr />
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.label :email, "Correo:" %>
  <%= f.email_field :email, autofocus: true %>

  <%= f.label :password, "Contraseña:" %>
  <%= f.password_field :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recuerdame" %></div>
  <% end -%>

  <div><%= f.submit "Login", :class=>"button" %></div>
<% end %>
  </div>
</div>
